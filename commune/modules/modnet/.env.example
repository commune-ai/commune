# Mod-Net Infrastructure Configuration
# Copy this file to .env and configure your actual values

# External Server Configuration
EXTERNAL_IP=YOUR_EXTERNAL_IP_HERE
EXTERNAL_PORT_RANGE_START=2001
EXTERNAL_PORT_RANGE_END=2201

# Ngrok Configuration
NGROK_SSH_DOMAIN=YOUR_SSH_DOMAIN.tcp.ngrok.io
NGROK_SSH_PORT=21633
NGROK_CHAIN_RPC_DOMAIN=https://chain-rpc-YOUR_SUBDOMAIN.ngrok.dev
NGROK_IPFS_API_DOMAIN=https://ipfs-api-YOUR_SUBDOMAIN.ngrok.dev
NGROK_IPFS_GATEWAY_DOMAIN=https://ipfs-gateway-YOUR_SUBDOMAIN.ngrok.dev
NGROK_IPFS_WORKER_DOMAIN=https://ipfs-worker-YOUR_SUBDOMAIN.ngrok.dev
NGROK_IPFS_WEBUI_DOMAIN=https://ipfs-webui-YOUR_SUBDOMAIN.ngrok.dev
NGROK_IPFS_UPLOADER_DOMAIN=https://ipfs-uploader-YOUR_SUBDOMAIN.ngrok.dev
NGROK_BLOCKCHAIN_EXPLORER_DOMAIN=https://blockchain-explorer-YOUR_SUBDOMAIN.ngrok.dev

# Service Configuration
BLOCKCHAIN_RPC_PORT=9944
IPFS_API_PORT=5001
IPFS_GATEWAY_PORT=8080
IPFS_SWARM_PORT=4001
IPFS_WORKER_PORT=8003
BLOCKCHAIN_EXPLORER_PORT=8081

# API Keys (generate secure keys for production)
IPFS_WORKER_API_KEY=GENERATE_SECURE_API_KEY_HERE
SECRET_KEY=GENERATE_SECURE_SECRET_KEY_HERE

# External Port Mappings
# Format: EXTERNAL_PORT=INTERNAL_PORT
EXTERNAL_SSH_PORT=2001
EXTERNAL_CHAIN_P2P_PORT=2101
EXTERNAL_CHAIN_RPC_PORT=2102
EXTERNAL_CHAIN_WS_PORT=2103
EXTERNAL_PROMETHEUS_PORT=2104
EXTERNAL_IPFS_API_PORT=2105
EXTERNAL_IPFS_GATEWAY_PORT=2106
EXTERNAL_IPFS_SWARM_PORT=2107
EXTERNAL_IPFS_WORKER_PORT=2108
EXTERNAL_BLOCKCHAIN_EXPLORER_PORT=2109

# Development/Production Mode
NODE_ENV=development
DEBUG=false
